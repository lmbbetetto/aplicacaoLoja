@model aplicacaoLoja.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>
<br/>
<br/>
<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="descricao" class="control-label"></label>
                <input asp-for="descricao" class="form-control" />
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="preco" class="control-label"></label>
                <input asp-for="preco" class="form-control" />
                <span asp-validation-for="preco" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="qtdeEstoque" class="control-label"></label>
                <input asp-for="qtdeEstoque" class="form-control" />
                <span asp-validation-for="qtdeEstoque" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="categoria" class="control-label"></label>
                <select asp-for="categoriaID" class="form-control" asp-items="ViewBag.categoriaID"></select>
                <span asp-validation-for="categoriaID" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="fornecedor" class="control-label"></label>
                <select asp-for="fornecedorID" class="form-control" asp-items="ViewBag.fornecedorID"></select>
                <span asp-validation-for="fornecedorID" class="text-danger"></span>
            </div>
            <br/>
            <br/>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary border-0 bg-success" style="width: 6rem" /> |
                <a asp-action="Index"><input value="Voltar" class="btn btn-primary bg-warning text-dark border-0 " style="width: 6rem" /></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
